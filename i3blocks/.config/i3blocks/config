# Global
command=/usr/bin/env bash
separator=true
interval=5

[battery]
command=cat /sys/class/power_supply/macsmc-battery/capacity
interval=1

[volume]
command=~/.config/i3blocks/volume.sh
interval=1

[ssid]
command=~/.config/i3blocks/wifi.sh
#INTERFACE=wlan0
interval=1

[disk]
command=df -h / | awk 'NR==2 {print $4}'
interval=30

[cpu_usage]
command=~/.config/i3blocks/cpu
interval=1

[memory]
command=~/.config/i3blocks/memory.sh
interval=1

[time]
command=date '+%m-%d-%Y %I:%M %p'
interval=60
